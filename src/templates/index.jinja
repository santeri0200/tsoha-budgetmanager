{% extends "base.jinja" %}
{% import "chart.jinja" as charts %}

{% macro panel_content(rows) %}
  {# This could be done with tables, but I don't want to play with them. #}
  <div class="panel-content">
    <div class="panel-item-col">
      <p>Name</p>
      {% for item in rows %}
        <p class="capitalise">{{ item["name"] }}</p>
      {% endfor %}
    </div>
    <div class="panel-item-col">
      <p>Value</p>
      {% for item in rows %}
        <p>{{ item["value"] }}</p>
      {% endfor %}
    </div>
    <div class="panel-item-col panel-item-col-last">
      <p>Description</p>
      {% for item in rows %}
        <p>{{ item["description"] }}</p>
      {% endfor %}
    </div>
  </div>
{% endmacro %}

{% block content%}
  <div class="content">
    <div class="panel panel-expandable">
      <a class="panel-type" href="/assets">Assets</a>
      {{ panel_content(assets) }}
    </div>
    <div class="panel panel-expandable">
      <a class="panel-type" href="/receipts">Receipts</a>
      {{ panel_content(receipts) }}
    </div>
    <div class="panel panel-graph">
      <a class="panel-type" href="/assets">Asset value</a>
      {{ charts.build_canvas("AssetValueCanvas") }}
    </div>
  </div>
{% endblock %}
