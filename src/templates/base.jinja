{% set rootpath = '/' + request.path.strip('/').split('/')[0] %}
{% set navpaths = [
  { "name": "Dashboard", "path": "/" },
  { "name": "Assets",    "path": "/assets" },
  { "name": "Settings",  "path": "/settings" }
] %}

{% set pathtitle = navpaths|selectattr("path", "equalto", rootpath)|map(attribute="name")|first %}

<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <title>{{ title if title else pathtitle if pathtitle else "undefined" }} - Budget manager</title>

  <!-- METADATA BLOCK -->
  <meta name="referrer" content="no-referrer">
  <meta name="theme-color" content="#FFF">
  <meta name="color-scheme" content="light dark">
  <meta name="viewport" content="initial-scale=1, width=device-width">

  <!-- LINKS -->
  <link rel="icon" href="data:,">
  <link rel="stylesheet" href="{{ url_for('static', filename='colors.css') }}">
  <link rel="stylesheet" href="{{ url_for('static', filename='style.css') }}">
  {% block stylesheets %}{% endblock %}

  <!-- JAVASCRIPT -->
  <script>
    document.addEventListener("DOMContentLoaded", (_) => console.log("Script: DOMContentLoaded!"));
    window.onload = (_) => console.log("Another onload");
  </script>
</head>

<body>
  {% block content %}{% endblock %}
</body>

</html>
