<div class="sidebar">
  <ul class="navbar">
    {% for item in nav_items %}
      <li class="navbar-item{% if item.is_active %} active{% endif %}">
        <a href="{{ item.path }}">{{ item.name }}</a>
      </li>
    {% endfor %}
  </ul>
  <hr>
  <div class="user">
    <p class="username">{{ session.user|safe }}</p> | <a class="logout" href="/logout">Logout</a>
  </div>
</div>
